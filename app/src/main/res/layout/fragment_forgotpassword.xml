<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintLayoutForgotPass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@id/forgotPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard"
            android:text="@string/forgotPass"
            android:layout_marginTop="@dimen/standard"
            android:textSize="@dimen/buttonText"
            app:layout_constraintStart_toStartOf="@id/constraintLayoutForgotPass"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/constraintLayoutForgotPass"
            app:layout_constraintRight_toRightOf="@id/constraintLayoutForgotPass"
            android:layout_marginHorizontal="@dimen/standard"
            android:text="@string/forgotPassActivitySubHeading"
            app:layout_constraintTop_toBottomOf="@+id/forgotPass"
            tools:layout_editor_absoluteX="12dp"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backToLoginFromForgotPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/standard"
            android:backgroundTint="@color/deepOrange"
            android:fontFamily="@font/happy_monkey"
            android:minHeight="65sp"
            android:text="@string/backToLogin"
            android:textAllCaps="false"
            android:textSize="@dimen/buttonText"
            android:textStyle="bold"
            app:cornerRadius="@dimen/standard"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="12dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
