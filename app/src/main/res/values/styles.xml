<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/happy_monkey</item>
        <item name="android:layout_margin">@dimen/standard</item>
    </style>
    <style name="TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextFieldSmall">
        <item name="android:fontFamily">@font/happy_monkey</item>
    </style>
    <style name="TextFieldInlineError">
        <item name="android:fontFamily">@font/happy_monkey</item>
        <item name="android:paddingLeft">@dimen/standard</item>
    </style>

    <style name="CustomCardViewStyle1" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners1</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners1" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeBottomRight">12dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CustomCardViewStyle2" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners2</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners2" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
    </style>
</resources>